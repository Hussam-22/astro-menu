---
import Contactform from '@components/contactform.astro'
import Container from '@components/container.astro'
import Sectionhead from '@components/sectionhead.astro'
import Layout from '@layouts/Layout.astro'
import { Icon } from 'astro-icon/components'
---

<Layout title="Contact">
	<Container class="md:max-w-screen-md">
		<Sectionhead>
			<Fragment slot="title">Contact</Fragment>
			<Fragment slot="desc">We are a here to help.</Fragment>
		</Sectionhead>

		<div class="mx-auto mt-16 grid max-w-4xl gap-10 lg:mb-24">
			<div>
				<h2 class="text-2xl font-medium text-gray-800">Contact Astro-Menu</h2>
				<p class="mt-3 text-lg leading-relaxed text-gray-500">
					Have something to say? We are here to help. Fill up the form or send email to:
					<strong class="text-rose-400">hello@astro-menu.com</strong>
				</p>
			</div>
			<div>
				<Contactform />
			</div>
		</div>
	</Container>
</Layout>
