	const toggleDarkMode = (e) => {
		e.preventDefault()
		document.documentElement.classList.toggle('dark')
	}

	const toggleModeBtn = document.querySelector('#toggleModeBtn')
	if (toggleModeBtn) {
		toggleModeBtn.addEventListener('click', toggleDarkMode)
	}
</script>

