---
const { className, imgSrc } = Astro.props
---

<div class={className}>
	<div class="relative w-52 overflow-visible rounded-3xl bg-black p-2">
		<!-- Side Buttons -->
		<div class="absolute top-20 h-12 w-2 rounded-xl bg-black" style="right: -3px;"></div>
		<div class="absolute top-20 h-12 w-2 rounded-xl bg-black" style="left: -3px;"></div>
		<div class="absolute top-40 h-12 w-2 rounded-xl bg-black" style="left: -3px;"></div>

		<!-- Top Button/Element -->
		<div class="absolute left-0 right-0 top-3 z-50 ml-auto mr-auto h-4 w-4 rounded-full bg-black">
		</div>

		<!-- Image -->
		<img src={imgSrc} class="h-full w-full rounded-3xl object-contain" />
	</div>
	<h2 class="mt-2 text-center font-bold">Menu View</h2>
</div>
