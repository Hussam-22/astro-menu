---
import { Picture } from 'astro:assets'
// import heroImage from "assets/hero.png";
import heroImage from 'assets/hero-2.svg'
import Link from '@components/ui/link.astro'
import { Icon } from 'astro-icon/components'
---

<main class="grid place-items-center pb-8 pt-8 md:pb-24 md:pt-12 lg:grid-cols-2">
	<div
		class="hidden py-6 md:order-1 md:block intersect:animate-fade-right intersect:animate-duration-1000 intersect-once"
	>
		<Picture
			src={heroImage}
			alt="Astronaut in the air"
			widths={[200, 400, 600]}
			sizes="(max-width: 800px) 100vw, 620px"
			loading="eager"
			format="avif"
		/>
	</div>
	<div>
		<h1
			class="text-4xl font-bold leading-snug lg:text-6xl lg:leading-relaxed lg:tracking-tight xl:text-7xl xl:leading-snug xl:tracking-tighter intersect:animate-fade-left intersect-once dark:text-white"
		>
			Say Goodby to <br />
			<span
				class="rounded-2xl border-b-4 border-black bg-black text-white px-2 dark:bg-white dark:text-black whitespace-nowrap"
				>Print Menus</span
			><br />
			Hello, <span class="rounded-2xl bg-rose-400 px-2 text-white whitespace-nowrap"
				>Astro <img src="assets/astro-logo.svg" class="w-16 h-16 inline-block" /> Menu</span
			>
		</h1>
		<p class="mt-4 max-w-xl text-lg intersect:animate-fade-right intersect-once dark:text-white">
			<span class="text-rose-400">Astro Menu</span> is a modern and responsive QR menu for restaurants,
			it offers a simple and easy way to showcase your menu to your customers. with minimum efforts,
			transform your print menu to digital QR menu and increase your turnover.
		</p>
		<div class="mt-6 flex flex-col gap-3 sm:flex-row items-center">
			<Link href="#" target="_blank" class="flex items-center justify-center gap-1" rel="noopener">
				<img src="assets/astro-logo.svg" class="w-7 h-7 inline-block" />

				Get Started for Free
			</Link>
			<p class="text-rose-400 font-bold">1 Month free, no credit card required</p>
		</div>
	</div>
</main>
