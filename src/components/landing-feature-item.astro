---
import { Debug } from 'astro:components'

const { feature, color, direction = 'flex-row' } = Astro.props
---

<div class:list={['mt-16 flex items-center gap-5 rounded-xl pl-10', color, direction]}>
	<div class="flex w-1/2 flex-col">
		<img
			src={`/assets/icons/${feature.data.icon}.svg`}
			alt={feature.data.title}
			class="h-20 w-20"
		/>
		<h1 class="text-3xl font-bold">{feature.data.title}</h1>
		<p class="mt-5 text-lg">
			{feature.data.snippet}
		</p>
		<p class="mt-3 text-lg">
			{feature.data.extraText}
		</p>
		<a class="btn btn-secondary mt-5 self-start" href={`/features/${feature.slug}`}
			>learn more about <span class="text-primary">{feature.data.title}</span> feature</a
		>
	</div>
	<div class="grid scale-75 grid-cols-2 items-center gap-5">
		<div class="text-center">
			<h2 class="mb-2 text-2xl font-bold text-primary">Astro Menu</h2>
			<div class="mockup-phone">
				<div class="camera"></div>
				<div class="display">
					<div class="artboard artboard-demo phone-1">
						<img
							src="/public/assets/features/translation.gif"
							alt="astro-menu-auto-translate-menu"
						/>
					</div>
				</div>
			</div>
		</div>

		<div class="text-center">
			<h2 class="mb-2 text-2xl font-bold">Other Menus</h2>
			<div class="mockup-phone">
				<div class="camera"></div>
				<div class="display">
					<div class="artboard artboard-demo phone-1">
						<img src="/public/assets/features/wifi.gif" alt="astro-menu-auto-translate-menu" />
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
