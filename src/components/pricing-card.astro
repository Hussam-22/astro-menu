---
import Link from '@components/ui/link.astro'

const { plan, index } = Astro.props
---

<div
	class={`intersect:animate-fade-left intersect-once flex justify-between flex-col w-full order-first lg:order-none border-2 ${plan.popular ? 'bg-rose-400 border-none text-white' : 'border-[#f1f1f1]'} border-opacity-80 py-5 px-6 rounded-md`}
	style={`animation-delay: ${index * 0.25}s`}
>
	<div>
		<div style="display:flex; justify-content:space-between; align-items:center;" class="mb-2">
			<div style="display:flex; flex-direction: row; align-items:center; gap:8px">
				<img src={`/assets/plans/${plan.icon}.svg`} alt="coffee" class="mx-auto h-10 w-10" />
				<p class="whitespace-nowrap text-lg font-bold xl:text-2xl">
					{plan.name}
				</p>
			</div>
			{
				plan.popular && (
					<div class="rounded-lg bg-white px-2 py-1 text-xs uppercase text-secondary">
						<p>most popular</p>
					</div>
				)
			}
		</div>
		<p class="h-36 text-sm">{plan.description}</p>
		<p class="py-2 text-center text-5xl font-bold">
			{plan.price}
			<span class="text-sm">/month</span>
		</p>
	</div>
	<ul class="mt-8 grid gap-y-2 text-left">
		{
			plan.features.map((item, featureIndex) => (
				<li key={featureIndex} class="flex items-start gap-3">
					<svg
						class="h-5 w-5 flex-shrink-0 text-green-500 dark:text-green-400"
						fill="currentColor"
						viewBox="0 0 20 20"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							fillRule="evenodd"
							d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
							clipRule="evenodd"
						/>
					</svg>
					<span
						class:list={[
							featureIndex <= 2 ? 'font-bold' : 'font-thin',
							plan.popular && 'text-white'
						]}
					>
						{item}
					</span>
				</li>
			))
		}
	</ul>
	<div class="mt-8 flex">
		<Link href={plan.button.link || '#'} block style="outline">
			{plan.button.text || 'Get Started'}
		</Link>
	</div>
</div>
