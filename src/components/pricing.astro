---
import { Tick } from '@components/ui/icons'
import Link from '@components/ui/link.astro'

const { plan } = Astro.props
---

<div>
	<div
		class={`flex flex-col w-full order-first lg:order-none border-4 ${plan.popular ? 'border-rose-500' : 'border-[#D8DEE9]'}  border-opacity-80 py-5 px-6 rounded-md`}
	>
		<div class="text-center">
			<img src=`/src/assets/plans/${plan.icon}.svg` alt="coffee" class="mx-auto h-12 w-12" />
			<h4 class="text-lg font-medium text-gray-400">{plan.name}</h4>
			<p class="mt-3 text-4xl font-bold text-black md:text-4xl">
				{plan.price && typeof plan.price === 'object' ? plan.price.monthly : plan.price}
			</p>
			{
				plan.popular && (
					<div class="self-center rounded-lg border-2 border-rose-300 bg-rose-200 px-2 py-1 font-semibold uppercase">
						<p>popular</p>
					</div>
				)
			}
			<!-- {
        plan.price.original && (
          <p class="mt-1 text-xl font-medium text-gray-400 line-through md:text-2xl">
            {plan.price.original}
          </p>
        )
      } -->
		</div>
		<ul class="mt-8 grid gap-y-4 text-left">
			{
				plan.features.map((item) => (
					<li class="flex items-start gap-3 text-gray-800">
						<Tick class="h-6 w-6" />
						<span>{item}</span>
					</li>
				))
			}
		</ul>
		<div class="mt-8 flex">
			<Link
				href={plan.button.link || '#'}
				block
				style={plan.popular ? 'primary' : 'outline'}
				class={plan.popular ? 'bg-rose-500' : 'bg-white'}
			>
				{plan.button.text || 'Get Started'}
			</Link>
		</div>
	</div>
</div>
